@model DierenTuin_opdracht.Models.Animal

@{
    ViewData["Title"] = "Bewerken";
}

<h1>Bewerken</h1>

<h4>Dier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>ID: @Model.Id</p>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Species" class="control-label">Soort</label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Categorie</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Size" class="control-label">Grootte</label>
                <select asp-for="Size" class="form-control"
                        asp-items="Html.GetEnumSelectList<DierenTuin_opdracht.Models.Size>()">
                </select>

                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DietaryClass" class="control-label">Voedingsklasse</label>
                <select asp-for="DietaryClass" class="form-control"
                        asp-items="Html.GetEnumSelectList<DierenTuin_opdracht.Models.DietaryClass>()">
                </select>

                <span asp-validation-for="DietaryClass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ActivityPattern" class="control-label">Activiteitspatroon</label>
                <select asp-for="ActivityPattern" class="form-control"
                        asp-items="Html.GetEnumSelectList<DierenTuin_opdracht.Models.ActivityPattern>()">
                </select>

                <span asp-validation-for="ActivityPattern" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnclosureId" class="control-label">Verblijf</label>
                <select asp-for="EnclosureId" class="form-control" asp-items="ViewBag.EnclosureId"></select>
                <span asp-validation-for="EnclosureId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpaceRequirement" class="control-label">Ruimtebehoefte (m²)</label>
                <input type="number" step="0.01" asp-for="SpaceRequirement" class="form-control" />
                <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
            </div>



            @{
                var preyOptions = ViewData["PreyOptions"] as List<Animal> ?? new();
                var selected = ViewData["SelectedPreyIds"] as List<int> ?? new();
                var selectedSet = new HashSet<int>(selected);
            }

            <div class="form-group">
                <label>Prooi</label>
                @foreach (var p in preyOptions)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedPreyIds"
                               value="@p.Id"
                        @(selectedSet.Contains(p.Id) ? "checked" : "") />
                        <label class="form-check-label">@p.Species</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="SecurityRequirement" class="control-label">Beveiligingsniveau</label>
                <select asp-for="SecurityRequirement" class="form-control"
                        asp-items="Html.GetEnumSelectList<DierenTuin_opdracht.Models.SecurityLevel>()">
                </select>

                <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
