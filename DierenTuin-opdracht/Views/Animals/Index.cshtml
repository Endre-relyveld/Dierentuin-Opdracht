@model IEnumerable<DierenTuin_opdracht.Models.Animal>

<h1>Dieren</h1>

@using Microsoft.AspNetCore.Mvc.Rendering
@using DierenTuin_opdracht.Models

<form asp-action="Index" method="get" class="filter-form">

    <!-- Naam -->
    <input type="text" name="name" placeholder="Naam"
           value="@Context.Request.Query["name"]" />

    <!-- Soort -->
    <input type="text" name="species" placeholder="Soort"
           value="@Context.Request.Query["species"]" />

    <!-- Categorie -->
    <select name="categoryId">
        <option value="">Categorie</option>
        @foreach (var c in (SelectList)ViewData["Categories"])
        {
            <option value="@c.Value" selected="@(c.Selected)">
                @c.Text
            </option>
        }
    </select>

    <!-- Grootte -->
    <select name="size">
        <option value="">Grootte</option>
        @foreach (var v in Enum.GetValues(typeof(Size)))
        {
            <option value="@v"
                    selected="@(Context.Request.Query["size"] == v.ToString())">
                @v
            </option>
        }
    </select>

    <!-- Voedingsklasse -->
    <select name="dietaryClass">
        <option value="">Voedingsklasse</option>
        @foreach (var v in Enum.GetValues(typeof(DietaryClass)))
        {
            <option value="@v"
                    selected="@(Context.Request.Query["dietaryClass"] == v.ToString())">
                @v
            </option>
        }
    </select>

    <!-- Activiteitspatroon -->
    <select name="activityPattern">
        <option value="">Activiteitspatroon</option>
        @foreach (var v in Enum.GetValues(typeof(ActivityPattern)))
        {
            <option value="@v"
                    selected="@(Context.Request.Query["activityPattern"] == v.ToString())">
                @v
            </option>
        }
    </select>

    <!-- Verblijf -->
    <input type="text" name="enclosure"
           placeholder="Verblijf"
           value="@Context.Request.Query["enclosure"]" />

    <!-- Ruimtebehoefte -->
    <input type="number" step="0.1" name="minSpace"
           placeholder="Min m²"
           value="@Context.Request.Query["minSpace"]" />

    <!-- Prooi (op soort) -->
    <input type="text" name="preySpecies"
           placeholder="Prooi (soort)"
           value="@Context.Request.Query["preySpecies"]" />

    <!-- Beveiligingsniveau -->
    <select name="securityRequirement">
        <option value="">Beveiligingsniveau</option>
        @foreach (var v in Enum.GetValues(typeof(SecurityLevel)))
        {
            <option value="@v"
                    selected="@(Context.Request.Query["securityRequirement"] == v.ToString())">
                @v
            </option>
        }
    </select>

    <button type="submit">Filter</button>
    <a asp-action="Index">Reset</a>

</form>



<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Soort</th>
            <th>Categorie</th>
            <th>Verblijf</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Species)</td>
                <td>@(item.Category?.Name ?? "Geen categorie")</td>
                <td>@(item.Enclosure?.Name ?? "Geen verblijf")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Bewerken</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a> |
                    <a asp-action="Sunrise" asp-route-id="@item.Id">Zonsopgang</a> |
                    <a asp-action="Sunset" asp-route-id="@item.Id">Zonsondergang</a> |
                    <a asp-action="FeedingTime" asp-route-id="@item.Id">Voeren</a> |
                    <a asp-action="CheckConstraints" asp-route-id="@item.Id">Controleer eisen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuw dier toevoegen</a>
</p>



<style>

    /* ==============================
   Animals Index – Filter Panel
   ============================== */

.filter-form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px;

    padding: 16px;
    margin-bottom: 20px;

    background: #1f2933;              /* donker dashboard */
    border-radius: 10px;
    border: 1px solid #2f3b47;
}

/* Inputs & selects */
.filter-form input,
.filter-form select {
    width: 100%;
    padding: 8px 10px;

    background: #111827;
    color: #e5e7eb;

    border: 1px solid #374151;
    border-radius: 6px;

    font-size: 0.9rem;
}

/* Placeholder */
.filter-form input::placeholder {
    color: #9ca3af;
}

/* Focus state */
.filter-form input:focus,
.filter-form select:focus {
    outline: none;
    border-color: #3b82f6;
    background: #020617;
}

/* Buttons row */
.filter-form button,
.filter-form a {
    padding: 9px 12px;
    text-align: center;

    font-weight: 500;
    font-size: 0.9rem;

    border-radius: 6px;
    cursor: pointer;
}

/* Filter button */
.filter-form button {
    background: #2563eb;
    color: white;
    border: none;
}

.filter-form button:hover {
    background: #1d4ed8;
}

/* Reset button */
.filter-form a {
    background: #374151;
    color: #e5e7eb;
    text-decoration: none;
}

.filter-form a:hover {
    background: #4b5563;
}

/* Make buttons align nicely */
.filter-form button,
.filter-form a {
    align-self: end;
}

/* echte placeholders (input) */
.filter-form input::placeholder {
    color: #999;
}

/* select "placeholders" (eerste option) */
.filter-form select {
    color: #999;
}

/* zodra een echte waarde is gekozen */
.filter-form select:has(option:checked:not([value=""])) {
    color: #000;
}


</style>