@model DierenTuin_opdracht.Models.Category

@{
    ViewData["Title"] = "Categorie verwijderen";
}

<h1>Categorie verwijderen</h1>

<h3>Weet je zeker dat je deze categorie wilt verwijderen?</h3>
<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar overzicht</a>
    </form>
</div>
