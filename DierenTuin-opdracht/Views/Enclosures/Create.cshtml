@model DierenTuin_opdracht.Models.Enclosure

@{
    ViewData["Title"] = "Verblijf aanmaken";
}

<h1>Verblijf aanmaken</h1>

<h4>Verblijf</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Climate" class="control-label">Klimaat</label>
                <select asp-for="Climate" class="form-control" asp-items="ViewBag.ClimateOptions"></select>
                <span asp-validation-for="Climate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HabitatType" class="control-label">Type leefgebied</label>
                <input asp-for="HabitatType" class="form-control" />
                <span asp-validation-for="HabitatType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SecurityLevel" class="control-label">Beveiligingsniveau</label>
                <select asp-for="SecurityLevel" class="form-control" asp-items="ViewBag.SecurityLevelOptions"></select>
                <span asp-validation-for="SecurityLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Size" class="control-label">Oppervlakte (m²)</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
