@model DierenTuin_opdracht.Models.Enclosure

@{
    ViewData["Title"] = "Verblijf verwijderen";
}

<h1>Verblijf verwijderen</h1>

<h3>Weet je zeker dat je dit verblijf wilt verwijderen?</h3>
<div>
    <h4>Verblijf</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Klimaat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Climate)
        </dd>

        <dt class="col-sm-2">
            Type leefgebied
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HabitatType)
        </dd>

        <dt class="col-sm-2">
            Beveiligingsniveau
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityLevel)
        </dd>

        <dt class="col-sm-2">
            Oppervlakte (m²)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar overzicht</a>
    </form>
</div>
