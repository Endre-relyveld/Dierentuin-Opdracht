<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DierenTuin_opdracht</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DierenTuin_opdracht.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark custom-navbar mb-3">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DierenTuin_opdracht</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link Green-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link Green-text" asp-area="" asp-controller="Animals" asp-action="Index">Dieren</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link Green-text" asp-area="" asp-controller="Categories" asp-action="Index">Categorieën</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link Green-text" asp-area="" asp-controller="Enclosures" asp-action="Index">Verblijven</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link Green-text" asp-area="" asp-controller="Zoos" asp-action="Index">Dierentuin</a>
                        </li>
                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DierenTuin_opdracht - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>


    /* ===== NAVBAR STYLING ===== */
    .custom-navbar {
        background-color: #1f2937; /* donkergrijs */
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }

        .custom-navbar .navbar-brand {
            font-weight: 600;
            color: #f9fafb;
        }

        .custom-navbar .nav-link {
            color: #d1d5db;
            margin-right: 0.5rem;
            transition: color 0.2s ease, background-color 0.2s ease;
        }

            .custom-navbar .nav-link:hover {
                color: #ffffff;
                background-color: rgba(255,255,255,0.08);
                border-radius: 4px;
            }

            .custom-navbar .nav-link.active {
                color: #ffffff;
                font-weight: 500;
            }

    .Green-text {
        color: rgb(255 255 255 / 85%);
    }

    /* Navbar exact horizontaal & verticaal gecentreerd */
    header {
        display: flex;
        justify-content: center;
    }

        header .navbar {
            width: 100%;
        }

    .navbar .container-fluid {
        display: flex;
        justify-content: center;
    }

  
    .navbar-nav {
        align-items: center;
    }
    /* Haal navbar-brand uit de layout flow */
    .navbar-brand {
        position: absolute;
        left: 1rem; /* blijft links zichtbaar */
        top: 50%;
        transform: translateY(-50%);
        white-space: nowrap;
    }

    /* Zorg dat nav-items echt exact gecentreerd zijn */
    .navbar .navbar-collapse {
        justify-content: center !important;
    }

    /* Voorkomt dat absolute position issues geeft */
    .navbar {
        position: relative;
    }


</style>

</html>

