<!-- Dashboard sectie -->
<section class="zoo-dashboard">
    <h2 class="zoo-dashboard__title">Acties voor de dierentuin</h2>

    <ul class="zoo-dashboard__actions">
        <li><a class="zoo-dashboard__action" asp-action="Sunrise">Zonsopgang</a></li>
        <li><a class="zoo-dashboard__action" asp-action="Sunset">Zonsondergang</a></li>
        <li><a class="zoo-dashboard__action" asp-action="FeedingTime">Etenstijd</a></li>
        <li><a class="zoo-dashboard__action" asp-action="CheckConstraints">Controleer eisen</a></li>
        <li><a class="zoo-dashboard__action" asp-action="AutoAssign">Automatisch indelen</a></li>
    </ul>
</section>
